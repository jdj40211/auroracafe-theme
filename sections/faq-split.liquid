<div class="section section--page-width faq-section color-{{ section.settings.color_scheme }}" data-faq-section>
  <div class="faq-section__grid">
    <div class="faq-section__intro">
      {% if section.settings.heading != blank %}
        <h2 class="faq-section__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <p class="faq-section__description">{{ section.settings.description }}</p>
      {% endif %}
      {% if section.settings.button_label != blank %}
        <a
          class="faq-section__cta"
          {% if section.settings.button_link != blank %}
            href="{{ section.settings.button_link }}"
          {% else %}
            role="link"
            aria-disabled="true"
          {% endif %}
        >
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
    <div class="faq-section__accordion" data-faq-accordion>
      {% for block in section.blocks %}
        <details class="faq-item" data-faq-item {{ block.shopify_attributes }}>
          <summary class="faq-item__summary" data-faq-trigger>
            <p class="faq-item__question">{{ block.settings.question }}</p>
            <span class="faq-item__icon" aria-hidden="true"></span>
          </summary>
          <div class="faq-item__panel" data-faq-panel>
            <p class="faq-item__answer">{{ block.settings.answer | newline_to_br }}</p>
          </div>
        </details>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
  .section.faq-section {
    padding-block-start: clamp(3rem, 6vw, 5rem);
    padding-block-end: 0 !important;
    margin-bottom: 0 !important;
    margin-block-end: 0 !important;
    background-color: rgba(0, 0, 0, 0.05) !important;
  }

  .faq-section {
    padding-block-start: clamp(3rem, 6vw, 5rem);
    padding-block-end: 0 !important;
    margin-bottom: 0 !important;
    background-color: rgba(0, 0, 0, 0.05) !important;
  }

  .faq-section__grid {
    display: grid;
    gap: clamp(2rem, 4vw, 4rem);
    padding-bottom: 0;

    @media (min-width: 900px) {
      grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
      align-items: start;
    }
  }

  .faq-section__intro {
    display: grid;
    gap: clamp(1rem, 2.5vw, 1.5rem);
    max-width: 480px;
  }

  .faq-section__heading {
    margin: 0;
    font-family: var(--font-heading--family);
    font-weight: 700;
    font-size: clamp(2rem, 4vw, 2.5rem);
    line-height: 1.15;
    color: rgb(var(--color-foreground-heading-rgb));
  }

  .faq-section__description {
    margin: 0;
    font-family: var(--font-body--family);
    font-weight: 400;
    font-size: 1rem;
    line-height: 1.6;
    color: rgb(var(--color-foreground-rgb));
  }

  .faq-section__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: 52px;
    padding-inline: 2rem;
    font-family: var(--font-body--family);
    font-weight: 600;
    font-size: 1rem;
    color: #ffffff;
    background-color: #795838;
    border-radius: 999px;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .faq-section__cta:hover,
  .faq-section__cta:focus-visible {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(121, 88, 56, 0.25);
  }

  .faq-section__accordion {
    display: grid;
    gap: clamp(0.75rem, 2vw, 1rem);
    padding-bottom: 0;
    margin-bottom: 0;
  }

  .faq-item {
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    padding-block: clamp(0.75rem, 2vw, 1rem);
  }

  .faq-item:last-of-type {
    border-bottom: none;
    padding-bottom: 0;
  }

  .faq-item__summary {
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    cursor: pointer;
    list-style: none;
  }

  .faq-item__summary::-webkit-details-marker {
    display: none;
  }

  .faq-item__question {
    margin: 0;
    font-family: 'Inter', var(--font-body--family);
    font-weight: 600;
    font-size: 12px;
    letter-spacing: 0.96px;
    line-height: 1.4em;
    text-transform: uppercase;
    color: #35312E;
  }

  .faq-item__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    color: #35312E;
    pointer-events: none;
  }

  .faq-item__icon::before {
    content: '+';
    font-size: 1.25rem;
    line-height: 1;
  }

  .faq-item[open] .faq-item__icon::before {
    content: '-';
  }

  .faq-item__panel {
    display: grid;
    grid-template-rows: 0fr;
    opacity: 0;
    overflow: hidden;
    transition: grid-template-rows 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55), 
                opacity 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .faq-item__panel > * {
    min-height: 0;
    overflow: hidden;
    padding-top: 0;
    transition: padding-top 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  details.faq-item[open] .faq-item__panel {
    grid-template-rows: 1fr;
    opacity: 1;
  }

  details.faq-item[open] .faq-item__panel > * {
    padding-top: 0.75rem;
  }

  .faq-item__answer {
    margin: 0;
    font-family: 'Inter', var(--font-body--family);
    font-weight: 500;
    font-size: 16px;
    letter-spacing: 0;
    line-height: 1.4em;
    color: #6E6E6E;
    text-transform: none;
    transition: color 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }
{% endstylesheet %}


