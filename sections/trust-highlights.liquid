{% liquid
  assign heading = section.settings.heading
%}

<div class="section section--page-width home-trust-section color-{{ section.settings.color_scheme }}" data-section-id="{{ section.id }}">
  {% if heading != blank %}
    <h2 class="home-trust-section__heading">{{ heading }}</h2>
  {% endif %}
  <div class="home-trust-section__grid">
    {% for block in section.blocks %}
      <article class="home-trust-card" {{ block.shopify_attributes }}>
        {% if block.settings.icon != 'none' or block.settings.custom_icon != blank %}
          <div class="home-trust-card__icon">
            {% render 'icon-or-image', icon: block.settings.icon, image_upload: block.settings.custom_icon, width: 36 %}
          </div>
        {% endif %}
        {% if block.settings.title != blank %}
          <p class="home-trust-card__title">{{ block.settings.title }}</p>
        {% endif %}
        {% if block.settings.text != blank %}
          <p class="home-trust-card__text">{{ block.settings.text }}</p>
        {% endif %}
      </article>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  /* Override section constraints */
  .home-trust-section,
  .section--page-width .home-trust-section {
    padding-block: clamp(2.5rem, 5vw, 3.5rem);
    max-width: 100% !important;
    width: 100% !important;
    grid-column: 1 / -1 !important;
  }

  .home-trust-section__heading {
    margin: 0 0 clamp(1.75rem, 4vw, 2.5rem);
    font-family: var(--font-heading--family);
    font-weight: 700;
    font-size: clamp(1.75rem, 3vw, 2rem);
    color: rgb(var(--color-foreground-heading-rgb));
    text-align: center;
  }

  /* Desktop: Grid con 4 columnas en fila */
  .home-trust-section__grid {
    display: grid !important;
    grid-template-columns: repeat(4, 1fr) !important;
    gap: 20px;
    width: 100%;
    max-width: 100%;
    margin-inline: auto;
    padding-inline: 3rem;
  }

  /* Cada card: Stack Vertical */
  .home-trust-card {
    display: flex !important;
    flex-direction: column !important;
    justify-content: center !important;
    align-items: center !important;
    gap: 12px;
    padding: 24px 20px;
    height: 133px;
    border-radius: 12px;
    background-color: #f5f5f5;
    text-align: center;
    overflow: hidden;
  }

  /* Icono Container */
  .home-trust-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    flex-shrink: 0;
    background: transparent;
  }

  .home-trust-card__icon svg,
  .home-trust-card__icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Título */
  .home-trust-card__title {
    margin: 0;
    font-family: var(--font-heading--family);
    font-weight: 600;
    font-size: 11px;
    line-height: 1.2;
    color: #333333;
    text-align: center;
    width: 100%;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Descripción */
  .home-trust-card__text {
    margin: 0;
    font-family: var(--font-body--family);
    font-weight: 400;
    font-size: 10px;
    line-height: 1.2;
    color: #666666;
    text-align: center;
    width: 100%;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Mobile: Grid 2 columnas */
  @media (max-width: 749px) {
    .home-trust-section {
      padding-block: clamp(2rem, 4vw, 2.5rem);
    }

    .home-trust-section__grid {
      grid-template-columns: repeat(2, 1fr) !important;
      gap: 12px;
      padding-inline: 1.5rem;
    }

    .home-trust-card {
      height: 160px;
      gap: 12px;
      padding: 20px 16px;
    }

    .home-trust-card__icon {
      width: 32px;
      height: 32px;
    }

    .home-trust-card__title {
      font-size: 11px;
    }

    .home-trust-card__text {
      font-size: 10px;
      line-height: 1.2;
    }
  }

  /* Mobile muy pequeño */
  @media (max-width: 480px) {
    .home-trust-section__grid {
      gap: 10px;
      padding-inline: 1rem;
    }

    .home-trust-card {
      height: 150px;
      gap: 10px;
      padding: 18px 14px;
    }

    .home-trust-card__icon {
      width: 28px;
      height: 28px;
    }

    .home-trust-card__title {
      font-size: 10px;
    }

    .home-trust-card__text {
      font-size: 9px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Trust highlights",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Confía en Aurora Café"
    }
  ],
  "blocks": [
    {
      "type": "highlight",
      "name": "Highlight",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "truck", "label": "Truck" },
            { "value": "badge_check", "label": "Check" },
            { "value": "chat_bubble", "label": "Chat" },
            { "value": "clock", "label": "Clock" },
            { "value": "shield", "label": "Shield" },
            { "value": "box", "label": "Box" },
            { "value": "none", "label": "None" }
          ],
          "default": "truck"
        },
        {
          "type": "image_picker",
          "id": "custom_icon",
          "label": "Icono personalizado"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Envío gratuito"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Descripción",
          "default": "Entregas rápidas en todo el país."
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Trust highlights",
      "blocks": [
        { "type": "highlight" },
        { "type": "highlight" },
        { "type": "highlight" },
        { "type": "highlight" }
      ]
    }
  ]
}
{% endschema %}

