{% liquid
  assign heading = section.settings.heading
%}

<div class="section section--page-width trust-badges color-{{ section.settings.color_scheme }}" data-section-id="{{ section.id }}">
  {% if heading != blank %}
    <h2 class="trust-badges__heading">{{ heading }}</h2>
  {% endif %}
  <div class="trust-badges__grid">
    {% for block in section.blocks %}
      <article class="trust-badge" {{ block.shopify_attributes }}>
        {% if block.settings.icon != 'none' or block.settings.custom_icon != blank %}
          <div class="trust-badge__icon">
            {% render 'icon-or-image', icon: block.settings.icon, image_upload: block.settings.custom_icon, width: 36 %}
          </div>
        {% endif %}
        {% if block.settings.title != blank %}
          <p class="trust-badge__title">{{ block.settings.title }}</p>
        {% endif %}
        {% if block.settings.text != blank %}
          <p class="trust-badge__text">{{ block.settings.text }}</p>
        {% endif %}
      </article>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  .trust-badges {
    padding-block: clamp(2.5rem, 5vw, 3.5rem);
  }

  .trust-badges__heading {
    margin: 0 0 clamp(1.75rem, 4vw, 2.5rem);
    font-family: var(--font-heading--family);
    font-weight: 700;
    font-size: clamp(1.75rem, 3vw, 2rem);
    color: rgb(var(--color-foreground-heading-rgb));
  }

  .trust-badges__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: clamp(0.75rem, 2vw, 1.25rem);
  }

  .trust-badge {
    display: grid;
    align-content: center;
    justify-items: center;
    gap: 0.5rem;
    height: 133px;
    padding: 1.5rem;
    border-radius: 8px;
    background-color: #f7f7f7;
    overflow: clip;
    text-align: center;
  }

  .trust-badge__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    margin-top: 0.25rem;
    color: rgba(0, 0, 0, 0.75);
  }

  .trust-badge__title {
    margin: 0;
    font-family: var(--font-heading--family);
    font-weight: 700;
    font-size: 1rem;
    color: rgb(var(--color-foreground-heading-rgb));
  }

  .trust-badge__text {
    margin: 0;
    font-family: var(--font-body--family);
    font-weight: 400;
    font-size: 0.95rem;
    color: rgba(0, 0, 0, 0.6);
  }

  @media (max-width: 749px) {
    .trust-badges__grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Trust highlights",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Confía en Aurora Café"
    }
  ],
  "blocks": [
    {
      "type": "highlight",
      "name": "Highlight",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "truck", "label": "Truck" },
            { "value": "badge_check", "label": "Check" },
            { "value": "chat_bubble", "label": "Chat" },
            { "value": "clock", "label": "Clock" },
            { "value": "shield", "label": "Shield" },
            { "value": "box", "label": "Box" },
            { "value": "none", "label": "None" }
          ],
          "default": "truck"
        },
        {
          "type": "image_picker",
          "id": "custom_icon",
          "label": "Icono personalizado"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Envío gratuito"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Descripción",
          "default": "Entregas rápidas en todo el país."
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Trust highlights",
      "blocks": [
        { "type": "highlight" },
        { "type": "highlight" },
        { "type": "highlight" },
        { "type": "highlight" }
      ]
    }
  ]
}
{% endschema %}
