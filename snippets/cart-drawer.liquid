    position: relative;
    z-index: 1;
    padding-bottom: 0;
  }

  /* ============================================
     ESTRUCTURA DEL FOOTER PARA CARRITO VACÍO
     ============================================ */
  .cart-drawer__footer-empty {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
  }

  /* Ajustar el contenido cuando está vacío */
  .cart-drawer--empty .cart-drawer__content {
    padding-bottom: 140px; /* Espacio para los badges */
  }

  /* ============================================
     RESPONSIVE
     ============================================ */
  @media (max-width: 480px) {
    .cart-drawer__free-shipping-bar {
      padding: 12px 15px;
    }

    .free-shipping-bar__text {
      font-size: 13px;
    }

    .trust-badges__grid {
      gap: 8px;
    }

    .trust-badge {
      padding: 6px 3px;
    }

    .trust-badge__title {
      font-size: 9px;
    }
    
    .trust-badge__description {
      font-size: 8px;
    }
    
    .trust-badge__icon {
      width: 22px;
      height: 22px;
      margin-bottom: 4px;
    }

    .cart-drawer__empty-text {
      font-size: 16px;
    }

    .cart-drawer__cta-button {
      padding: 10px 25px;
      font-size: 13px;
    }

    /* Iconos de pago aún más pequeños en móvil */
    .payment-icon {
      height: 40px;
      max-width: auto;
    }

    .cart-drawer__payment-icons {
      gap: 8px;
      padding: 8px 15px;
    }
  }

  /* ============================================
     ANIMACIONES
     ============================================ */
  @keyframes slideIn {
    from {
      transform: translateX(100%);
    }
    to {
      transform: translateX(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .cart-drawer__dialog[open] {
    animation: slideIn 0.3s ease-out;
  }

  .cart-drawer__trust-badges {
    animation: fadeIn 0.5s ease-out;
  }

  /* ============================================
     UTILIDADES
     ============================================ */
  .cart-drawer--empty .cart-drawer__items {
    display: none;
  }

  .cart-drawer--empty .cart-drawer__summary {
    display: none;
  }

  /* ============================================
     SCROLLBAR PERSONALIZADO PARA PAYMENT ICONS
     ============================================ */
  .cart-drawer__payment-icons::-webkit-scrollbar {
    height: 0px;
  }

  .cart-drawer__payment-icons::-webkit-scrollbar-track {
    background: transparent;
  }

  .cart-drawer__payment-icons::-webkit-scrollbar-thumb {
    background: transparent;
  }
